<div class="flex h-screen font-sans">
    <aside class="w-64 bg-[#ffffff] dark:bg-[#1e1f20] p-4 flex flex-col border-r border-[#e0e0e0] dark:border-[#3c3d3f]">
        <div class="flex items-center justify-between mb-8">
            <h1 class="text-xl font-semibold">AI Code Space</h1>
        </div>
        <a href="/" class="flex items-center gap-3 w-full p-2 mb-4 text-left text-sm bg-[#e8f0fe] dark:bg-[#282a2c] rounded-lg font-medium">
            <i class="uil uil-plus-circle text-xl"></i>
            New Chat
        </a>
        
        <div class="flex-grow overflow-y-auto pr-2 space-y-1">
            <% if (sessions && sessions.length > 0) { %>
                <% sessions.forEach(session => { %>
                    <a href="/chat/<%= session.id %>" 
                       title="<%= session.id %>"
                       class="block p-2 text-sm rounded-lg truncate
                              <% if (session.id === activeSessionId) { %>
                                  bg-[#e8f0fe] dark:bg-[#3c3d3f] font-medium
                              <% } else { %>
                                  hover:bg-[#f1f3f4] dark:hover:bg-[#282a2c]
                              <% } %>">
                        <%= session.title %>
                    </a>
                <% }) %>
            <% } %>
        </div>

        <div class="text-sm pt-4">
            <a href="/settings" class="flex items-center gap-3 p-2 rounded-lg hover:bg-[#f1f3f4] dark:hover:bg-[#282a2c]">
                <i class="uil uil-cog"></i>
                <span>Settings</span>
            </a>
            <a href="#" class="flex items-center gap-3 p-2 rounded-lg hover:bg-[#f1f3f4] dark:hover:bg-[#282a2c]">
                <i class="uil uil-question-circle"></i>
                <span>Help</span>
            </a>
        </div>
    </aside>

    <main class="flex-1 flex flex-col">
        <header class="flex items-center justify-between p-2">
            <div class="relative">
                <button id="model-selector-btn" class="flex items-center gap-2 p-2 rounded-lg hover:bg-[#f1f3f4] dark:hover:bg-[#282a2c]">
                    <span class="text-lg font-medium">Gemini 2.5 Flash</span>
                    <i class="uil uil-angle-down text-xl text-[#5f6368] dark:text-[#9e9e9e]"></i>
                </button>
                <div id="model-dropdown" class="hidden absolute left-0 mt-2 w-64 bg-white dark:bg-[#282a2c] rounded-md shadow-lg border border-[#e0e0e0] dark:border-[#3c3d3f] z-10">
                    <a href="#" data-model="gemini-2.5-flash" class="flex items-center justify-between px-4 py-2 text-sm hover:bg-[#f1f3f4] dark:hover:bg-[#3c3d3f]">
                        <span>Gemini 2.5 Flash</span>
                        <i class="uil uil-check-circle text-gray-800 dark:text-white"></i>
                    </a>
                    <a href="#" data-model="gemini-2.5-pro" class="flex items-center justify-between px-4 py-2 text-sm hover:bg-[#f1f3f4] dark:hover:bg-[#3c3d3f]">
                        <span>Gemini 2.5 Pro</span>
                    </a>
                </div>
            </div>
            <div class="w-8 h-8 rounded-full bg-[#e0e0e0] dark:bg-[#3c3d3f] flex items-center justify-center font-bold">K</div>
        </header>

        <div id="welcome-screen" class="flex-1 flex flex-col justify-center items-center p-4">
            <h1 class="text-5xl font-bold bg-gradient-to-r from-gray-900 to-gray-600 dark:from-white dark:to-gray-400 text-transparent bg-clip-text mb-12">Hello, Kiann</h1>
        </div>

        <div id="chat-container" class="hidden flex-1 p-4 overflow-y-auto"></div>

        <footer class="p-4 bg-white/50 backdrop-blur-sm dark:bg-[#131314]/50">
            <div class="max-w-4xl mx-auto">
                <div class="relative flex items-center p-2 bg-[#f1f3f4] dark:bg-[#1e1f20] rounded-full border border-[#e0e0e0] dark:border-[#3c3d3f]">
                    <button id="codebase-btn" title="Inject Codebase" class="p-3 text-[#5f6368] dark:text-[#9e9e9e] rounded-full hover:bg-[#e0e0e0] dark:hover:bg-[#282a2c]">
                        <i class="uil uil-brackets-curly text-xl"></i>
                    </button>
                    <textarea id="chat-input" class="flex-1 bg-transparent text-lg px-4 focus:outline-none resize-none" placeholder="Ask me anything..." rows="1"></textarea>
                    <button id="send-btn" title="Send Message" class="p-3 bg-gray-800 text-white rounded-full hover:bg-black dark:bg-gray-200 dark:text-black dark:hover:bg-white disabled:bg-gray-400">
                        <i class="uil uil-arrow-up text-xl"></i>
                    </button>
                </div>
            </div>
        </footer>

        <div id="codebase-modal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex justify-center items-center z-20">
            <div class="bg-white dark:bg-[#1e1f20] rounded-lg shadow-xl w-1/2 h-3/4 flex flex-col p-6 border border-[#e0e0e0] dark:border-[#3c3d3f]">
                <div class="flex justify-between items-center mb-4">
                    <h2 class="text-2xl font-bold">Inject Codebase</h2>
                    <button id="close-modal-btn" class="text-[#5f6368] dark:text-[#9e9e9e] hover:text-black dark:hover:text-white text-3xl">&times;</button>
                </div>
                <textarea id="codebase-textarea" class="flex-1 w-full p-4 border border-[#e0e0e0] dark:border-[#3c3d3f] rounded-md resize-none font-mono text-sm bg-white dark:bg-[#131314]" placeholder="Paste your codebase here..."></textarea>
                <div class="flex justify-end mt-4">
                    <button id="save-codebase-btn" class="flex items-center gap-2 px-6 py-2 bg-gray-800 text-white rounded-lg hover:bg-black dark:bg-gray-200 dark:text-black dark:hover:bg-white">
                        <i class="uil uil-save"></i>
                        <span>Save Codebase</span>
                    </button>
                </div>
            </div>
        </div>
    </main>
</div>