<div class="flex h-screen font-sans">
    <aside class="w-64 bg-[#ffffff] dark:bg-[#1e1f20] p-4 flex flex-col border-r border-[#e0e0e0] dark:border-[#3c3d3f]">
        <div class="flex items-center justify-between mb-8">
            <h1 class="text-xl font-semibold">AI Code Space</h1>
        </div>
        <a href="/" class="flex items-center gap-3 w-full p-2 mb-2 text-left text-sm rounded-lg hover:bg-[#f1f3f4] dark:hover:bg-[#282a2c]">
            <i class="uil uil-comment-alt-dots text-xl"></i> Chat
        </a>
        <a href="/settings" class="flex items-center gap-3 w-full p-2 mb-4 text-left text-sm bg-[#e8f0fe] dark:bg-[#282a2c] rounded-lg">
             <i class="uil uil-cog text-xl"></i> Settings
        </a>
        <div class="flex-grow"></div>
    </aside>

    <main class="flex-1 flex flex-col bg-[#f0f4f9] dark:bg-[#131314] overflow-y-auto">
        <header class="p-4 border-b border-[#e0e0e0] dark:border-[#3c3d3f]">
            <h1 class="text-2xl font-bold">Settings</h1>
            <p class="text-[#5f6368] dark:text-[#9e9e9e]">Sesuaikan personalisasi dan API Key Gemini di sini.</p>
        </header>

        <div class="p-6 space-y-8">
            <section>
                <h2 class="text-xl font-semibold mb-4">Personalisasi</h2>
                <form action="/settings/general" method="POST" class="space-y-4 p-4 border border-[#e0e0e0] dark:border-[#3c3d3f] rounded-lg">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label for="user_name" class="block text-sm font-medium mb-1">Nama Kamu</label>
                            <input type="text" id="user_name" name="user_name" value="<%= settings.user_name %>" class="block w-full px-3 py-2 bg-white dark:bg-[#1e1f20] border border-[#e0e0e0] dark:border-[#3c3d3f] rounded-md focus:outline-none focus:ring-1 focus:ring-gray-500">
                        </div>
                        <div>
                            <label for="ai_name" class="block text-sm font-medium mb-1">Nama AI</label>
                            <input type="text" id="ai_name" name="ai_name" value="<%= settings.ai_name %>" class="block w-full px-3 py-2 bg-white dark:bg-[#1e1f20] border border-[#e0e0e0] dark:border-[#3c3d3f] rounded-md focus:outline-none focus:ring-1 focus:ring-gray-500">
                        </div>
                    </div>
                    <div>
                        <label for="user_info" class="block text-sm font-medium mb-1">Informasi Tentang Kamu</label>
                        <textarea id="user_info" name="user_info" rows="4" class="block w-full px-3 py-2 bg-white dark:bg-[#1e1f20] border border-[#e0e0e0] dark:border-[#3c3d3f] rounded-md font-mono text-sm focus:outline-none focus:ring-1 focus:ring-gray-500"><%= settings.saved_info.user %></textarea>
                    </div>
                    <div>
                        <label for="ai_info" class="block text-sm font-medium mb-1">Informasi Tentang AI</label>
                        <textarea id="ai_info" name="ai_info" rows="4" class="block w-full px-3 py-2 bg-white dark:bg-[#1e1f20] border border-[#e0e0e0] dark:border-[#3c3d3f] rounded-md font-mono text-sm focus:outline-none focus:ring-1 focus:ring-gray-500"><%= settings.saved_info.ai %></textarea>
                    </div>
                    <div class="flex justify-end">
                        <button type="submit" class="px-4 py-2 bg-gray-800 text-white rounded-md hover:bg-black dark:bg-gray-200 dark:text-black dark:hover:bg-white">Simpan Personalisasi</button>
                    </div>
                </form>
            </section>

            <section>
                <h2 class="text-xl font-semibold mb-4">Manajemen API Key Gemini</h2>
                <div class="p-4 border border-[#e0e0e0] dark:border-[#3c3d3f] rounded-lg">
                    <form action="/settings/keys" method="POST" class="flex items-center gap-4 mb-6">
                        <input type="password" name="new_key" placeholder="Masukkan API Key baru di sini..." class="flex-grow px-3 py-2 bg-white dark:bg-[#1e1f20] border border-[#e0e0e0] dark:border-[#3c3d3f] rounded-md focus:outline-none focus:ring-1 focus:ring-gray-500">
                        <button type="submit" class="px-4 py-2 bg-gray-800 text-white rounded-md hover:bg-black dark:bg-gray-200 dark:text-black dark:hover:bg-white">Tambah Key</button>
                    </form>

                    <div class="space-y-3">
                        <h3 class="text-lg font-medium">Key Tersimpan</h3>
                        <% if (keys.available_keys.length > 0) { %>
                            <% keys.available_keys.forEach(key => { %>
                                <div class="flex items-center justify-between p-3 bg-white dark:bg-[#282a2c] rounded-md">
                                    <div class="font-mono text-sm text-[#5f6368] dark:text-[#9e9e9e]">
                                        <%= key.substring(0, 4) + '...'.padEnd(35, '.') + key.substring(key.length - 4) %>
                                        <% if (key === keys.active_key) { %>
                                            <span class="ml-2 text-xs font-bold text-black dark:text-white bg-gray-200 dark:bg-[#3c3d3f] px-2 py-1 rounded-full">AKTIF</span>
                                        <% } %>
                                    </div>
                                    <div class="flex items-center gap-2">
                                        <form action="/settings/keys" method="POST">
                                            <input type="hidden" name="active_key" value="<%= key %>">
                                            <button type="submit" class="p-2 text-gray-500 dark:text-gray-400 hover:text-gray-800 dark:hover:text-white" title="Jadikan Aktif" <% if (key === keys.active_key) { %>disabled<% } %>>
                                                <i class="uil uil-check-circle"></i>
                                            </button>
                                        </form>
                                        <form action="/settings/keys" method="POST">
                                            <input type="hidden" name="delete_key" value="<%= key %>">
                                            <button type="submit" class="p-2 text-gray-500 dark:text-gray-400 hover:text-red-600 dark:hover:text-red-500" title="Hapus Key">
                                                <i class="uil uil-trash-alt"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <p class="text-[#5f6368] dark:text-[#9e9e9e] text-center py-4">Belum ada API Key yang tersimpan.</p>
                        <% } %>
                    </div>
                </div>
            </section>
        </div>
    </main>
</div>